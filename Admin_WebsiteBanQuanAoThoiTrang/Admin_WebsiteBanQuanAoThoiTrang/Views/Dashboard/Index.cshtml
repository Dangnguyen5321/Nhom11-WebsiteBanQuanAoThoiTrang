@{
    ViewBag.Title = "Dashboard";
    ViewBag.SubTitle = "Statistics Overview";
}
@section scripts{
    <!-- JavaScript Biểu Đồ Morris -->
    <script src="~/Content/js/jquery.js"></script>
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>*@
    <script src="~/Content/js/plugins/morris/raphael.min.js"></script>
    <script src="~/Content/js/plugins/morris/morris.min.js"></script>
    <script src="~/Content/js/plugins/morris/morris-data.js"></script>
}

<div id="dashboard" class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.NewOrders</div>
                        <div>Đơn Hàng Mới</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem Chi Tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-gift fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.DispatchedOrders</div>
                        <div>Đơn Hàng Đã Gửi</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem Chi Tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-truck fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ShippedOrders</div>
                        <div>Đơn Hàng Đã Vận Chuyển</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem Chi Tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-check fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.DeliveredOrders</div>
                        <div>Đơn Hàng Đã Giao</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem Chi Tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>Lịch Sử Bán Hàng</h3>
            </div>
            <div class="panel-body">
                <div id="morris-area-chart"></div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Top 3 Sản Phẩm Bán Chạy Nhất</h3>
            </div>
            <div class="panel-body">
                <div id="morris-donut-chart"></div>
                <div class="text-right">
                    <a href="#">Xem Chi Tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-red">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Số Đơn Hàng Theo Ngày</h3>
            </div>
            <div class="panel-body">
                <div id="morris-line-chart"></div>
                <div class="text-right">
                    <a href="#">Xem Chi Tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Doanh Thu Tại Các Quốc Gia</h3>
            </div>
            <div class="panel-body">
                <div id="morris-bar-chart"></div>
                <div class="text-right">
                    <a href="#">Xem Chi Tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Bảng Công Việc</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    <a href="#" class="list-group-item">
                        <span class="badge">vừa xong</span>
                        <i class="fa fa-fw fa-calendar"></i> Cập nhật lịch
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">4 phút trước</span>
                        <i class="fa fa-fw fa-comment"></i> Bình luận về bài viết
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">23 phút trước</span>
                        <i class="fa fa-fw fa-truck"></i> Đơn hàng 392 đã được gửi
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">46 phút trước</span>
                        <i class="fa fa-fw fa-money"></i> Hóa đơn 653 đã được thanh toán
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">1 giờ trước</span>
                        <i class="fa fa-fw fa-user"></i> Một người dùng mới đã được thêm
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">2 giờ trước</span>
                        <i class="fa fa-fw fa-check"></i> Hoàn thành công việc: "nhặt quần áo khô"
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">hôm qua</span>
                        <i class="fa fa-fw fa-globe"></i> Đã...
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">hai ngày trước</span>
                        <i class="fa fa-fw fa-check"></i> Hoàn thành công việc: "sửa lỗi trên trang bán hàng"
                    </a>
                </div>
                <div class="text-right">
                    <a href="#">Xem Tất Cả Hoạt Động <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Bảng Giao Dịch</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Mã Đơn Hàng</th>
                                <th>Ngày Đặt Hàng</th>
                                <th>Số Tiền (PKR)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @ViewBag.latestOrders)
                            {
                                <tr>
                                    <td>@item.OrderID</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.TotalAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="#">Xem Tất Cả Giao Dịch <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
