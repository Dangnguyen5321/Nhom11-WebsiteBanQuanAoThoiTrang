<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Quần Áo Thời Trang DN-VCT</title>

    @Styles.Render("~/Content/css")
    <style>
        .page-header {
            padding-bottom: 5px;
            margin: 10px;
            border-bottom: 1px solid #eee;
        }

        .navbar-inverse .navbar-nav > .active > a {
            color: #fff;
            background-color: #337ab7;
        }

        .navbar-brand {
            padding: 0;
        }
    </style>

</head>
<body>
    <div id="wrapper">
        <!-- Điều hướng -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Thương hiệu và điều chỉnh cho màn hình di động -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Chuyển đổi điều hướng</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="@Url.Action("Index","Dashboard")" title="Kahreedo.pk">
                    <img style="max-width:50px; margin-right: 10px; display:inline-block"
                         src="~/Fasticon-Shop-Cart-Shop-cart.ico">Quần Áo Thời Trang DN-VCT
                </a>
            </div>
            <!-- Menu trên cùng -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-envelope"></i> <b class="caret"></b></a>
                    <ul class="dropdown-menu message-dropdown">
                        <li class="message-preview">
                            <a href="#">
                                <div class="media">
                                    <span class="pull-left">
                                        <img class="media-object" src="http://placehold.it/50x50" alt="">
                                    </span>
                                    <div class="media-body">
                                        <h5 class="media-heading">
                                            <strong>Dang Nguyen</strong>
                                        </h5>
                                        <p class="small text-muted"><i class="fa fa-clock-o"></i> Hôm qua lúc 4:32 chiều</p>
                                        <p>...</p>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="message-preview">
                            <a href="#">
                                <div class="media">
                                    <span class="pull-left">
                                        <img class="media-object" src="http://placehold.it/50x50" alt="">
                                    </span>
                                    <div class="media-body">
                                        <h5 class="media-heading">
                                            <strong>Dang Nguyen</strong>
                                        </h5>
                                        <p class="small text-muted"><i class="fa fa-clock-o"></i> Hôm qua lúc 4:32 chiều</p>
                                        <p>...</p>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="message-preview">
                            <a href="#">
                                <div class="media">
                                    <span class="pull-left">
                                        <img class="media-object" src="http://placehold.it/50x50" alt="">
                                    </span>
                                    <div class="media-body">
                                        <h5 class="media-heading">
                                            <strong>Dang Nguyen</strong>
                                        </h5>
                                        <p class="small text-muted"><i class="fa fa-clock-o"></i> Hôm qua lúc 4:32 chiều</p>
                                        <p>...</p>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="message-footer">
                            <a href="#">Xem tất cả tin nhắn mới</a>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@Session["username"]<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Index","Profile")"><i class="fa fa-fw fa-user"></i> Hồ Sơ</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Hộp Thư</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Settings")"><i class="fa fa-fw fa-gear"></i> Cài Đặt</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("Logout","admin_Login")"><i class="fa fa-fw fa-power-off"></i> Đăng Xuất</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Các mục menu bên trái - Các mục này sẽ thu gọn trên màn hình nhỏ -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="@(ViewBag.Title=="Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-fw fa-dashboard"></i> Bảng Điều Khiển</a>
                    </li>
                    <li class="@(ViewBag.Title == "Order" ? "active" : "")">
                        <a href="@Url.Action("Index", "Order")"><i class="fa fa-fw fa-shopping-cart"></i> Đơn Hàng</a>
                    </li>
                    <li class="@(ViewBag.Title == "Product" ? "active" : "")">
                        <a href="@Url.Action("Index", "Product")"><i class="fa fa-fw fa-table"></i> Sản Phẩm</a>
                    </li>
                    <li class="@(ViewBag.Title == "Supplier" ? "active" : "")">
                        <a href="@Url.Action("Index", "Supplier")"><i class="fa fa-fw fa-truck"></i> Nhà Cung Cấp</a>
                    </li>
                    <li class="@(ViewBag.Title == "Customer" ? "active" : "")">
                        <a href="@Url.Action("Index", "Customer")"><i class="fa fa-fw fa-male"></i> Khách Hàng</a>
                    </li>
                    <li class="@(ViewBag.Title == "Employee" ? "active" : "")">
                        <a href="@Url.Action("Index", "Employee")"><i class="fa fa-fw fa-user"></i> Nhân Viên</a>
                    </li>
                    <li class="@(ViewBag.Title == "Settings" ? "active" : "")">
                        <a href="@Url.Action("Index", "Settings")"><i class="fa fa-fw fa-gear"></i> Cài Đặt</a>
                    </li>
                    <li class="@(ViewBag.Title == "Logout" ? "active" : "")">
                        <a href="@Url.Action("Logout", "Login")"><i class="fa fa-fw fa-sign-out"></i> Đăng Xuất</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">

                <!-- Tiêu Đề Trang -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            @ViewBag.Title
                            <small>@ViewBag.SubTitle</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index","Dashboard")">Trang Chủ</a>
                            </li>
                            <li>
                                <i class=""></i> @ViewBag.Title
                            </li>
                            <li>
                                <i class=""></i> @ViewBag.SubTitle
                            </li>
                        </ol>
                        @RenderBody()
                    </div>
                </div>
                <!-- /.row -->
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Thiết kế &amp; phát triển bởi Nguyễn Hải Đăng và Văng Công Tín</p>
                </footer>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <!-- jQuery và Bootstrap Core JavaScript -->
    @Scripts.Render("~/Content/js")
    @RenderSection("scripts", required: false)

</body>
</html>